general {
	#output_format = "i3bar"
	colors = true
	interval = 1
	color_good = "#10c010"
	color_bad = "#c01010"
}


order += "disk /home"
order += "disk /"
order += "wireless wlp3s0"
order += "ethernet enp2s0"
order += "battery 1"
order += "volume master"
order += "tztime teh"

wireless wlp3s0 {
	format_up = "WiFi%quality"
	#format_up = "W:(%quality at %essid)"
	format_down = "W: no"
}

ethernet enp2s0 {
	# if you use %speed, i3status requires the cap_net_admin capability
	format_up = "E:(%speed)"
	format_down = "E:no"
}

